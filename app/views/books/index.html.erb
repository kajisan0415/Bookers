<body>
 <h1>Books</h1>
  <% @books.each do |book| %>
   <p>title</p>
   <span><%= book.title %></span>
   <p>body</p>
   <span><%= book.body %></span>
<% end %>



  <h2>New book</h2>
  <%= form_with model:@book,local:true do |f| %>
      <div class="field">
       <label for="book_title">title</label>
          <%= f.text_field :title %>
         </div>
         <div class="field">
         <label for="book_body">text</label>
          <%= f.text_area :body %>
         </div>
         <div class="action">
         <%= f.submit "Create Book" %>
         </div>
  <% end %>
</body>