<body>
 <h1>Books</h1>
  <table>
   <thead>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
   </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
       <a><%= link_to("Show","/books/#{book.id}") %></a>
      </td>
      <td>
       <a><%= link_to("edit","/books/#{book.id}/edit") %></a>
      </td>
      <td>
       <a><%= link_to("delete","/books/#{book.id}", method: :delete,"data-confirm" => "Are you sure?") %></a>
      </td>
    </tr>
     <% end %>
   </tbody>
  </table>



  <h2>New book</h2>
  <%= form_with model:@book,local:true do |f| %>
      <div class="field">
       <label for="book_title">title</label>
          <%= f.text_field :title %>
         </div>
         <div class="field">
         <label for="book_body">Body</label>
          <%= f.text_area :body %>
         </div>
         <div class="action">
         <%= f.submit "Create Book" %>
         </div>
  <% end %>
</body>