 <h1>Edit book</h1>
  <%= form_with model:@book,local:true do |f| %>
      <div class="field">
       <label for="book_title">title</label>
          <%= f.text_field :title %>
         </div>
         <div class="field">
         <label for="book_body">Body</label>
          <%= f.text_area :body %>
         </div>
         <div class="action">
         <%= f.submit "Update Book" %>
         </div>
  <% end %>
 
 
  
 <a><%= link_to("Show","/books/#{@book.id}") %></a> | <a><%= link_to("Back","/books") %></a>